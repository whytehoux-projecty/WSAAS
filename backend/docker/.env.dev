# Aurum Vault Development Environment Configuration
# This file contains development-specific settings with secure defaults

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=aurumvault_dev
DB_USER=aurumvault_admin
DB_PASSWORD=dev_password_123
DATABASE_URL=postgresql://aurumvault_admin:dev_password_123@localhost:5433/aurumvault_dev

# Redis Configuration
REDIS_PASSWORD=dev_redis_123
REDIS_URL=redis://:dev_redis_123@localhost:6379

# JWT Configuration (Development Only - Use Strong Secrets in Production)
JWT_SECRET=dev_jwt_secret_key_for_development_only_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=dev_cookie_secret_for_development_only_change_in_production

# Session Configuration
SESSION_SECRET=dev_session_secret_for_development_only_change_in_production

# CORS Configuration (Permissive for Development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173
ADMIN_CORS_ORIGIN=http://localhost:3002

# Admin Tools Passwords
PGADMIN_PASSWORD=dev_admin_123
REDIS_COMMANDER_PASSWORD=dev_redis_admin_123
GRAFANA_PASSWORD=dev_grafana_123

# Encryption Configuration
ENCRYPTION_KEY=dev_encryption_key_32_chars_long

# External Services (Sandbox/Development)
PLAID_CLIENT_ID=your_plaid_client_id_sandbox
PLAID_SECRET=your_plaid_secret_sandbox
PLAID_ENV=sandbox

DWOLLA_KEY=your_dwolla_key_sandbox
DWOLLA_SECRET=your_dwolla_secret_sandbox
DWOLLA_ENV=sandbox

# Email Configuration (Using Mailhog for Development)
SENDGRID_API_KEY=your_sendgrid_api_key_dev
FROM_EMAIL=noreply@aurumvault.dev
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security (Relaxed for Development)
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=6

# Business Rules
MIN_TRANSFER_AMOUNT=1
MAX_TRANSFER_AMOUNT=50000
DAILY_TRANSFER_LIMIT=100000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Development Specific
NODE_ENV=development
DEBUG=aurumvault:*

# Hot Reloading
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Database Development Settings
DB_LOGGING=true
DB_SLOW_QUERY_THRESHOLD=1000

# API Development Settings
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# Frontend Development URLs
FRONTEND_URL=http://localhost:5173
ADMIN_FRONTEND_URL=http://localhost:3002

# Development Ports
CORE_API_PORT=3000
ADMIN_INTERFACE_PORT=3002
FRONTEND_PORT=5173

# Docker Development Settings
COMPOSE_PROJECT_NAME=aurumvault-dev
COMPOSE_FILE=docker-compose.dev.yml