{
  "name": "aurum-vault-admin-interface",
  "version": "1.0.0",
  "description": "Aurum Vault Admin Interface - Luxury Banking Administration Panel",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:all": "concurrently \"npm run watch:css\" \"npm run dev\"",
    "build": "npm run build:css && tsc",
    "build:css": "npx tailwindcss -i ./public/css/main.css -o ./public/css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./public/css/main.css -o ./public/css/styles.css --watch",
    "start": "node dist/server.js",
    "test": "DATABASE_URL=\"postgresql://postgres:password@localhost:5432/aurumvault_test?schema=public\" jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "type-check": "tsc --noEmit",
    "vercel-build": "bash scripts/vercel-build.sh"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/static": "^6.12.0",
    "@fastify/view": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^5.7.1",
    "@types/ejs": "^3.1.5",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.7.1",
    "qrcode": "^1.5.4",
    "redis": "^4.6.11",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pdfkit": "^0.17.4",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "alpinejs": "^3.15.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "banking",
    "admin",
    "express",
    "typescript",
    "aurumvault",
    "prisma",
    "redis"
  ],
  "author": "Aurum Vault Development Team",
  "license": "MIT"
}