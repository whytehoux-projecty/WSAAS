# NovaBank Admin Interface Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=localhost
LOG_LEVEL=info

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/aurumvault_dev"

# Redis Configuration (Optional for session management)
REDIS_URL="redis://localhost:6379"

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET="your-super-secure-admin-jwt-secret-key-change-this-in-production-minimum-32-chars"
JWT_EXPIRES_IN="24h"

# Cookie Configuration
COOKIE_SECRET="your-super-secure-cookie-secret-change-this-in-production-minimum-32-chars"

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Admin Session Configuration
ADMIN_SESSION_TIMEOUT=86400000

# Security Headers
HELMET_CSP_ENABLED=true

# Logging Configuration
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# External Services (Optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# Monitoring & Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Development Only
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_ROUTES=false